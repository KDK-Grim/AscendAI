{
  "vector_backend": "faiss",
  "embedding_dim": 384,
  "auto_index": true,
  "index_chunk_size": 500,
  "storage": {
    "vector_store_path": "./memory/vector_store/faiss/",
    "local_index_path": "./memory/local_index/",
    "metadata_db": "./memory/local_index/metadata.db"
  },
  "embedding": {
    "model": "all-MiniLM-L6-v2",
    "source": "sentence-transformers",
    "format": "float32",
    "batch_size": 250,
    "retain_raw_text": true
  },
  "tagging": {
    "auto_tag_enabled": true,
    "tag_strategies": ["source", "content_type", "semantic_topic", "agent", "mutation_type"]
  },
  "search": {
    "default_top_k": 10,
    "similarity_threshold": 0.75,
    "enable_semantic_boost": true,
    "fallback_to_keyword": true
  },
  "persistence": {
    "snapshot_interval_min": 15,
    "backup_enabled": true,
    "backup_path": "./run/checkpoints/",
    "max_snapshots": 10
  },
  "diagnostics": {
    "log_queries": true,
    "log_embeddings": true,
    "profiling": true,
    "track_embedding_origins": true
  }
}
